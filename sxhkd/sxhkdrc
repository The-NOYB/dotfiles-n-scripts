#
# wm independent hotkeys
#

# terminal emulator
ctrl + alt + t 
	urxvt-256color

# program launcher
super + x
	dmenu_run -sb "dark green"

# quick launch programs
super + n
	notes.sh

# quick music
super + a
	music.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + q 
	bspc node -c

# just trolling
alt + F4
	notify-send "lmao" #bspc node -k

# disabling laptop keyboard (uncomment if insane)
#alt + k
#    keyboard_toggle

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,s,f,p}
	bspc node -t {tiled,floating,fullscreen,pseudo_tiled}

# set the node flags
super + shift + {m,l,h}
	bspc node -g {marked,locked,hidden}

super + shift + u
	unhide.sh
#
# focus/swap
#
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# swap the node in the given direction
super + shift + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local


# focus the older or newer node in the focus history
alt + shift + Tab
	bspc node -f prev.local.window	

alt + Tab
    cycle.sh

super + w
    screen_scripts

#
# preselect
#
 
# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
         bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-30 0,0 30,0 -30,30 0}

# move to other desktop
super + alt + bracket{left,right}
	bspc node -d {prev,next}.local --follow 

# send the newest marked node to the newest preselected node
super + b 
         bspc node -g marked && bspc node newest.marked.local -n newest.!automatic.local

# screenshot
super + shift + s
	flameshot gui

F12 
	flameshot full -p ~/Pictures 

# date
super + d
    notify-send "$(date)"

# volume
XF86AudioRaiseVolume
	pamixer -i 2

XF86AudioLowerVolume
	pamixer -d 2

XF86AudioMute
	pamixer -t

# brightness
ctrl + F3
    brightnessctl s 5+
        
ctrl + F2
	brightnessctl s 5-
